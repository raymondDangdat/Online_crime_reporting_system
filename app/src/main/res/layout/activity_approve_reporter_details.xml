<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ApproveReporterDetails">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/app_bar_layout"
            android:id="@+id/approve_reporter_detail_toolbar"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:src="@drawable/images"
            />
        <TextView
            android:id="@+id/txt_fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abdul Wuyep Datti"
            android:layout_margin="15dp"
            android:padding="15dp"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/reporter_id"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="20dp"
            android:src="@drawable/id"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/txt_lg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kanam"
            android:layout_margin="15dp"
            android:padding="15dp"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txt_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Old Airport Road"
            android:layout_margin="15dp"/>
        <TextView
            android:id="@+id/txt_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="09067864545"
            android:layout_margin="15dp"/>
        <TextView
            android:id="@+id/txt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_margin="15dp"/>
        <TextView
            android:id="@+id/txt_occupation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Occupation"
            android:layout_margin="15dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_approve"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Approve"
                android:layout_margin="10dp"
                android:background="@drawable/big_button_blue"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:padding="15dp"/>
            <Button
                android:id="@+id/btn_decline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Decline"
                android:textColor="#ffffff"
                android:layout_margin="10dp"
                android:background="@drawable/big_button_red"
                android:textSize="20sp"
                android:padding="15dp"/>
        </LinearLayout>



    </LinearLayout>
</ScrollView>
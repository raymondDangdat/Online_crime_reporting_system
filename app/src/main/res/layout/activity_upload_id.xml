<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/good_night_img"
    tools:context=".UploadId">

    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/upload_id_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
        android:id="@+id/img_id"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/id"
        android:layout_margin="15dp"
        android:layout_gravity="center"/>

        <Button
        android:id="@+id/btn_upload_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="15dp"
        android:drawableEnd="@drawable/ic_perm_identity"
        android:background="@drawable/big_button_white"
        android:text="Upload ID"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:fontFamily="@font/fonttt"
        />


    </LinearLayout>

</LinearLayout>